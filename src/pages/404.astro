---
import Title from "@header/Title.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout>
    <Title />
    <div class="text-center">
        <img
            src="/404/404.png"
            alt="404 - Página no encontrada"
            class="w-1/2 mx-auto"
        />
        <h1 class="text-2xl text-H-blue-900 font-semibold">
            404 - Página no encontrada
        </h1>
        <hr class="my-4 bg-H-blue-300" />
        <p class="text-H-blue-900">
            La página que buscas no existe. <br /> Por favor, verifica la URL.
        </p>
    </div>
</Layout>
